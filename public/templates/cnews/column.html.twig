<div class="{% if span > 0 %}span{{span}}{% endif %}{% if offset > 0 %} offset{{offset}}{% endif %} {{ classHtml }}"
 {% if idHtml %}id="{{ idHtml }}"{% endif %}>
     {% if displayTitle %}
	<div class="widget-title">
		<h3>{{ eTitle }}</h3><span class="stripe-dots"></span>
	</div>
	{% endif %}
	<!-- process nested rows & blocks -->
	{% if blocks %}
		{% for block in blocks %}
			{% include [block.template,'root/block.html.twig'] with block.data only %}
		{% endfor %}
	{% endif %}
	{% if rows %}
		{% for row in rows %}
				{% include row.template with row only %}
		{% endfor %}
	{% endif %}
</div>